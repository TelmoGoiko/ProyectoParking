<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".view.fragment.CheckoutFragment">

    <!-- Toolbar con título y botón de atrás -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_checkout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        android:elevation="4dp"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finalizar Reserva"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_new_reservation"
                android:layout_marginEnd="16dp"
                app:tint="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- Contenido principal en ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar_checkout"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvTituloCheckout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resumen de la Reserva"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp" />

            <!-- Información del vehículo -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardVehiculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvTituloCheckout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vehículo"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"/>

                    <TextView
                        android:id="@+id/tvModeloVehiculo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Renault Clio"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tvMatriculaVehiculo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1234 ABC"
                        android:textSize="16sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Información del lugar y plaza -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardLugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/cardVehiculo">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ubicación"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"/>

                    <TextView
                        android:id="@+id/tvNombreParking"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Parking Central"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tvDireccionParking"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Calle Principal, 123"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tvNumeroPlaza"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Plaza: A-15"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Fechas y horas -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardFechas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/cardLugar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Período"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"/>

                    <TextView
                        android:id="@+id/tvFechaEntrada"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Entrada: 18/06/2025 10:00"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tvFechaSalida"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Salida: 18/06/2025 12:00"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tvDuracion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Duración: 2 horas"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Método de pago -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardPago"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/cardFechas">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Método de Pago"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"/>

                    <RadioGroup
                        android:id="@+id/radioGroupPago"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <RadioButton
                            android:id="@+id/radioTarjeta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tarjeta de crédito/débito"
                            android:checked="true"/>

                        <RadioButton
                            android:id="@+id/radioBizum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bizum"/>

                        <RadioButton
                            android:id="@+id/radioParkingPass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Parking Pass"/>
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Descuentos -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardDescuentos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/cardPago">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Descuentos"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <EditText
                            android:id="@+id/etCodigoDescuento"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Código de descuento"
                            android:inputType="text"
                            android:padding="12dp"/>

                        <Button
                            android:id="@+id/btnAplicarDescuento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aplicar"
                            android:textColor="@android:color/white"
                            android:backgroundTint="@color/colorPrimary"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvDescuentoAplicado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No hay descuentos aplicados"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:visibility="visible"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Resumen de pago -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardResumenPago"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/cardDescuentos"
                app:layout_constraintBottom_toTopOf="@id/btnCompletarReserva">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Resumen de Pago"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Importe base"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/tvImporteBase"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6.00€"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Descuento"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/tvImporteDescuento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-0.00€"
                            android:textSize="16sp"
                            android:textColor="#4CAF50"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#DDDDDD"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvImporteTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6.00€"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Botón Completar Reserva -->
            <Button
                android:id="@+id/btnCompletarReserva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Completar Reserva"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:backgroundTint="@color/colorPrimary"
                android:padding="12dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/cardResumenPago"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
