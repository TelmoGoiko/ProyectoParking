<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.SeleccionarPlazaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTituloSeleccionPlaza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecciona tu plaza de aparcamiento"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvFechaHora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Datos de la reserva"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <LinearLayout
            android:id="@+id/plazasContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">
            <!-- Aquí se cargarán dinámicamente las plazas disponibles -->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/seccionCoche"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plazas coche"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="8dp" />
            <LinearLayout
                android:id="@+id/containerCoche"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/seccionCocheElectrico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plazas coche eléctrico"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="8dp" />
            <LinearLayout
                android:id="@+id/containerCocheElectrico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/seccionCocheMinusvalido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plazas coche minusválido"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="8dp" />
            <LinearLayout
                android:id="@+id/containerCocheMinusvalido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/seccionCocheMinusvalidoElectrico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plazas coche minusválido eléctrico"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="8dp" />
            <LinearLayout
                android:id="@+id/containerCocheMinusvalidoElectrico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/seccionMoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plazas moto"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="8dp" />
            <LinearLayout
                android:id="@+id/containerMoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/seccionMotoMinusvalida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plazas moto minusválida"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="8dp" />
            <LinearLayout
                android:id="@+id/containerMotoMinusvalida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </LinearLayout>

        <Button
            android:id="@+id/btnConfirmarReserva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmar Reserva"
            android:backgroundTint="#1976D2"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
