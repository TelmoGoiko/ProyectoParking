<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".view.fragment.ElegirReservaFragment">

    <!-- Selector de vehículo y botones -->
    <LinearLayout
        android:id="@+id/llBotones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnAparcarYa"
        app:layout_constraintVertical_bias="0.3"
        android:layout_marginBottom="120dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_new_reservation"
                app:tint="@android:color/white"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reservar"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Elige fecha y hora de entrada y salida"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textAlignment="center" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnAparcarYa"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/tvInstruccion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnReservar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecciona tu vehículo"
            android:textSize="16sp"
            android:textColor="#1976D2"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerVehiculos"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp" />

        <Button
            android:id="@+id/btnReservar"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:text="Reservar (fecha y hora entrada/salida)"
            android:textSize="18sp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="#1976D2"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnAparcarYa"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:text="Aparcar Ya (entrada ahora, salida a elegir)"
            android:textSize="18sp"
            android:backgroundTint="#1976D2"
            android:textColor="@android:color/white" />
    </LinearLayout>
    <!-- Puedes añadir aquí mensajes de ayuda, instrucciones o imágenes si lo ves conveniente para mejorar la UX -->
</androidx.constraintlayout.widget.ConstraintLayout>
